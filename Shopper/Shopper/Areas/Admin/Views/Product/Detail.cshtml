@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Shopper.Areas.Admin.Models.ViewDetailModels.ProductDetailModel
@section header{
    Thông tin chi tiết
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-heading">
                <a class="btn btn-default btn-sm" href="/Admin/Product/Index"><i class="fa fa-backward"></i>&nbsp;Quay lại</a>
            </div>
            <div class="panel-body">
                <div class="box-body form-horizontal form-detail">
                    <div class="form-group">
                        <label class="col-sm-3 label-control">Ảnh:</label>
                        <div class="col-sm-9">
                            <img src="@Model.entity.Image" style="float: left; width: 150px; height: 200px;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 label-control">Mã Sản Phẩm:</label>
                        <div class="col-sm-9">
                            @Model.entity.ID
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 label-control">Code:</label>
                        <div class="col-sm-9">
                            @Model.entity.Code
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 label-control">Danh mục:</label>
                        <div class="col-sm-9">
                            @Model.category
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3">Tên Sản Phẩm:</label>
                        <div class="col-sm-9">
                            @Model.entity.Name
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3">Giá :</label>
                        <div class="col-sm-3">
                            @(Model.entity.Price.HasValue ? Model.entity.Price.Value.ToString("N0") : "chưa có giá")
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3">Giá sau khuyến mãi: </label>
                        <div class="col-sm-9 red">
                            @(Model.entity.PromotionPrice.HasValue ? Model.entity.PromotionPrice.Value.ToString("N0") : "chưa có")
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3">Số lượng còn: </label>
                        <div class="col-sm-9 red">
                            @Model.entity.Quantity.ToString()
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3">Được Tạo Bởi: </label>
                        <div class="col-sm-9 red">
                            @Model.entity.CreateBy
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3">Ngày Tạo: </label>
                        <div class="col-sm-9 red">
                            @(Model.entity.CreateDate.Value.ToString("dd-MM-yyyy"))
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3">Lần Cuối Sửa: </label>
                        <div class="col-sm-9 red">
                            @(Model.entity.ModifiedDate.HasValue ? Model.entity.ModifiedDate.Value.ToString("dd-MM-yyyy") : "Chưa sửa lần nào")
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3">Được Sửa Bởi: </label>
                        <div class="col-sm-9 red">
                            @Model.entity.ModifiedBy
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3">Số lượt xem: </label>
                        <div class="col-sm-9 red">
                            @Model.entity.ViewCount.ToString()
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3">Trạng Thái Hiện Tại: </label>
                        <div class="col-sm-9 red">
                            @((bool)Model.entity.Status ? "kích hoạt" : "khóa")
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <a class="btn btn-default btn-sm" href="/Admin/Product/Index"><i class="fa fa-backward"></i>&nbsp;Quay lại</a>
            </div>

        </div>
    </div>
</div>
