@model Shopper.Models.EF.Product
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Thêm Mới Người Dùng
}
@section footerJS{
    <script>

        $('#btnAddImage').on('click', function (e) {
            e.preventDefault();
            var ck = new CKFinder();
            ck.selectActionFunction = function (url) {
                $('#Image').val(url)
            };
            ck.popup();
        })

        var editer = CKEDITOR.replace('txt', {
            customConfig: "/Areas/Admin/Assets/ckeditor/config.js"
        });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/Admin/Product/Index" class="btn btn-default btn-sm mr-15"><i class="fa fa-backward"></i>&nbsp;Quay lại</a>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Update", "Product", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @style = "color:red;" })
                    @Html.HiddenFor(Model => Model.ID)
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Code)
                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control" })
                        <p class="help-block">@Html.ValidationMessageFor(model => model.Code, "", new { @style = "color:red;" })</p>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Name)
                        @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control" })
                        <p class="help-block">@Html.ValidationMessageFor(Model => Model.Name, "", new { @style = "color:red;" })</p>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Price)
                        @Html.TextBoxFor(Model => Model.Price, new { @class = "form-control" })
                        <p class="help-block">@Html.ValidationMessageFor(Model => Model.Price, "", new { @style = "color:red;" })</p>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(Model => Model.PromotionPrice)
                        @Html.TextBoxFor(Model => Model.PromotionPrice, new { @class = "form-control" })
                        <p class="help-block">@Html.ValidationMessageFor(Model => Model.PromotionPrice, "", new { @style = "color:red;" })</p>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Quantity)
                        @Html.TextBoxFor(Model => Model.Quantity, new { @class = "form-control" })
                        <p class="help-block">@Html.ValidationMessageFor(Model => Model.Quantity, "", new { @style = "color:red;" })</p>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Image)
                        @Html.TextBoxFor(Model => Model.Image, new { @class = "form-control" })
                        <a href="#" class="btn btn-link" id="btnAddImage">Thêm Ảnh</a>
                        <p class="help-block">@Html.ValidationMessageFor(Model => Model.Image, "", new { @style = "color:red;" })</p>
                    </div>
                    <div class="form-group">
                        <label>Nội Dung</label>
                        @Html.TextAreaFor(Model => Model.Detail, new { @class = "form-control", id = "txt" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(Model => Model.CatagoryID)
                        @Html.DropDownListFor(Model => Model.CatagoryID, null, new { @class = "form-control" })
                        <p class="help-block">@Html.ValidationMessageFor(Model => Model.CatagoryID, "", new { @style = "color:red;" })</p>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Status)
                        @Html.DropDownListFor(Model => Model.Status, null, new { @class = "form-control" })
                        <p class="help-block">@Html.ValidationMessageFor(Model => Model.Status, "", new { @style = "color:red;" })</p>
                    </div>

                    <input type="submit" value="Cập nhật" class="btn btn-primary btn-lg btn-block" />
                }
            </div>
            <div class="panel-heading">
                <a href="/Admin/Product/Index" class="btn btn-default btn-sm mr-15"><i class="fa fa-backward"></i>&nbsp;Quay lại</a>
            </div>
        </div>
    </div>
</div>