@model Shopper.Models.EF.Menu

@{
    ViewBag.Title = "ContactHelp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Sửa thông tin liên hệ đầu trang
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Cập Nhật liên hệ đầu trang
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @style = "color:red;" })
                            @Html.HiddenFor(model => model.ID)

                            <div class="form-group">
                                @Html.LabelFor(Model => Model.Text)
                                @Html.TextBoxFor(Model => Model.Text, new { @class = "form-control" })
                                <p class="help-block">@Html.ValidationMessageFor(Model => Model.Text, "", new { @style = "color:red;" })</p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(Model => Model.Link)
                                @Html.TextBoxFor(Model => Model.Link, new { @class = "form-control" })
                                <p class="help-block">@Html.ValidationMessageFor(Model => Model.Link, "", new { @style = "color:red;" })</p>
                            </div>
                            <input type="submit" value="Cập Nhật" class="btn btn-primary btn-lg btn-block" />
                        }
                        <div>
                            @Html.ActionLink("Trở Lại", "Index", "User")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


