@{
    ViewBag.Title = "RequestFeedback";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using Shopper.Areas.Admin.Models;
@model RequestFeedbackModel

@section header{
    Trả lời khách hàng
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a class="btn btn-default btn-sm" href="/Admin/FeedBack/Index"><i class="fa fa-backward"></i>&nbsp;Quay lại</a>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("RequestFeedback", "FeedBack", FormMethod.Post))
                {
                    @Html.Hidden("id", Model.id)
                    <div class="col-md-12 col-md-offset-0 col-sm-12">
                        <div class="box box-danger">
                            <div class="box-body form-horizontal form-detail">
                                <div class="form-group">
                                    <label class="col-sm-3 label-control">khách hàng:</label>
                                    <div class="col-sm-9">
                                        @Html.TextBox("Email", Model.Email, new { @class = "form-control", @readonly = "true" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 label-control">Ngày đăng:</label>
                                    <div class="col-sm-9">
                                        @Html.TextBox("CreateDate", Model.CreateDate, new { @class = "form-control", @readonly = "true" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 label-control">Nội dung:</label>
                                    <div class="col-sm-9">
                                        @Html.TextArea("content", Model.content, new { @class = "form-control", @readonly = "true" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 label-control">Nội dung trả lời:</label>
                                    <div class="col-sm-9">
                                        @Html.TextArea("myRequest", Model.myRequest, new { @class = "form-control", required = "Hãy điền nội dung để trả lời khách hàng", rows = "10" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 label-control"></label>
                                    <div class="col-sm-9">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block">Trả lời</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="panel-footer">
                <a class="btn btn-default btn-sm" href="/Admin/FeedBack/Index"><i class="fa fa-backward"></i>&nbsp;Quay lại</a>
            </div>
        </div>
    </div>
</div>


