@{
    ViewBag.Title = "sửa đổi tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Shopper.Models.EF.Contact
@using Shopper.Models.EF;
@section header{
    Sửa Đổi Thông Tin
}
@section footerJS{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        $('form:first').validate();
        var editer = CKEDITOR.replace('txt', {
            customConfig: "/Areas/Admin/Assets/ckeditor/config.js"
        });
    </script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/Admin/Contact/Index" class="btn btn-default btn-sm mr-15"><i class="fa fa-backward"></i>&nbsp;Quay lại</a>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "Contact", FormMethod.Post))
                {
                    @Html.Hidden("ID", Model.ID)
                    <div class="form-group">
                        <label>Nội Dung</label>
                        @Html.TextArea("Content", Model.Content, new { @class = "required form-control", id = "txt", title = "thông tin chi tiết" })
                    </div>

                    <input type="submit" value="Lưu thay đổi" class="btn btn-primary btn-lg btn-block" />
                }
            </div>
            <div class="panel-footer">
                <a href="/Admin/Contact/Index" class="btn btn-default btn-sm mr-15"><i class="fa fa-backward"></i>&nbsp;Quay lại</a>
            </div>
        </div>
    </div>
</div>
