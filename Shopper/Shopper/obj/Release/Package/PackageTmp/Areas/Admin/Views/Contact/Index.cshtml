@{
    ViewBag.Title = "thông tin liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using Shopper.Models.EF
@model Contact
@section header{
    Thông tin liên hệ
}
@section footerJS{
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <script src="~/Areas/Admin/Assets/js/controller/Contact.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <tr>
                <th style="text-align:center;">STT</th>
                <th style="text-align:center;">Nội Dung</th>
                <th style="text-align:center;">Chi tiết</th>
                <th style="text-align:center;">Sửa</th>
            </tr>
            <tbody class="rows">
                <tr id="row_@Model.ID">
                    <td style="text-align:center;">@Model.ID</td>
                    <td style="text-align:center;">@Html.Raw(Model.Content)</td>
                    <td style="text-align:center;">
                        <a href="#" class="ViewDetail" data-id="@Model.ID"><i class="fa fa-eye"></i></a>
                    </td>
                    <td style="text-align:center;"><a class="editContact" data-id="@Model.ID" href="#"><i class="fa fa-pencil"></i></a></td>
                </tr>

            </tbody>
        </table>
    </div>
</div>

<div class="modal modal-default" id="ViewDetail">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4><i class="fa fa-eye"></i> thông tin chi tiết</h4>
            </div>
            <div class="modal-body form-horizontal">
                <div class="form-group">
                    <div class="col-sm-3"><span>Nội Dung :</span></div>
                    <p class="col-sm-9 lbDetail"></p>
                </div>
                <div class="form-group">
                    <div class="col-sm-3">Hoạt động:</div>
                    <p class="col-sm-9 lbIsPub"></p>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" data-dismiss="modal" class="pull-right btn btn-danger"><i class="fa fa-close"></i>Đóng</a>
            </div>
        </div>
    </div>
</div>

