@model Shopper.Models.EF.ProductCategory

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Sửa Thông Tin Người Dùng
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/Admin/Category/Index" class="btn btn-default btn-sm mr-15"><i class="fa fa-backward"></i>&nbsp;Quay lại</a>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("Update", "Category", FormMethod.Post))
                        {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @style = "color:red;" })

                @Html.HiddenFor(Model => Model.ID)

                <div class="form-group">
                    @Html.LabelFor(Model => Model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    <p class="help-block">@Html.ValidationMessageFor(model => model.Name, "", new { @style = "color:red;" })</p>
                </div>

                <div class="form-group">
                    @Html.LabelFor(Model => Model.DisplayOrder)
                    @Html.EditorFor(Model => Model.DisplayOrder, new { @class = "form-control" })
                    <p class="help-block">@Html.ValidationMessageFor(Model => Model.DisplayOrder, "", new { @style = "color:red;" })</p>
                </div>

                <div class="form-group">
                    @Html.LabelFor(Model => Model.ShowOnHome)
                    @Html.DropDownListFor(Model => Model.ShowOnHome, null, new { @class = "form-control" })
                    <p class="help-block">@Html.ValidationMessageFor(Model => Model.ShowOnHome, "", new { @style = "color:red;" })</p>
                </div>
                <input type="submit" value="Cập Nhật" class="btn btn-primary btn-lg btn-block" />
                        }
            </div>
            <div class="panel-footer">
                <a href="/Admin/Category/Index" class="btn btn-default btn-sm mr-15"><i class="fa fa-backward"></i>&nbsp;Quay lại</a>
            </div>
        </div>
    </div>
</div>
