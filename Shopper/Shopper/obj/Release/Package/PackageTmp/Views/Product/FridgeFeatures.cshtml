@model List<Shopper.Models.EF.Product>
@{
    var category = ViewBag.CategoryID as Shopper.Models.EF.ProductCategory;
}
<div class="content_top">
    <div class="heading">
        <h3>Tủ Lạnh</h3>
    </div>
    <div class="see">
        <p><a href="/san-pham/@category.MetaTitile-@category.ID">Xem tất các sản phẩm</a></p>
    </div>
    <div class="clear"></div>
</div>
<div class="section group">
    @foreach (var item in Model)
    {
        var url = "/chi-tiet/" + item.MetaTitile + "-" + item.ID;
        <div class="grid_1_of_4 images_1_of_4">
            <h2>@item.Name</h2>
            <a href="@url"><img src="@item.Image" alt="" /></a>
            @if (item.PromotionPrice.Value > 0)
            {
                <h1 style="text-decoration: line-through;">
                    <span class="rupees">
                        @item.Price.Value.ToString("N0") VNĐ
                    </span>
                </h1>
                <h1>
                    <span class="rupees">
                        @item.PromotionPrice.Value.ToString("N0") VNĐ
                    </span>
                </h1>
            }
            else
            {
                <h1>
                    <span class="rupees">
                        @item.Price.Value.ToString("N0") VNĐ
                    </span>
                </h1>
            }
            <div class="price-details">
                <div class="price-number">
                    <p>
                        <span class="rupees">
                            @((item.Quantity > 0) ? "Còn hàng" : "Hết hàng")
                        </span>
                    </p>
                </div>
                <div class="add-cart">
                    <h4><a href="/them-gio-hang?productID=@item.ID&quantity=1">Mua</a></h4>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    }

</div>
