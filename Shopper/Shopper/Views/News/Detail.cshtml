@using Shopper.Models.ViewDetailModel
@model ContentDetailModel
@{
    ViewBag.Title = "thông tin bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{

    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.6&appId=532606476940861";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
}
<div id="fb-root"></div>
<div class="content">
    <div class="back-links">
        <a href="/tin-tuc"><i class="glyphicon glyphicon-arrow-left"></i> Quay lại mục tin tức</a>
    </div>
    <div class="clear"></div>
    <div class="section group">
        <div class="cont-desc span_1_of_2">
            <div class="row">
                <div class="col-lg-12">
                    <div class="well">
                        <p>@Model.content.Description</p>
                    </div>
                </div>
                <div class="col-lg-12">
                    @Html.Raw(Model.content.Detail)
                </div>
            </div>
        </div>
        <div class="rightsidebar span_3_of_1">
            @{Html.RenderAction("Category", "Home");}
            <div class="subscribe">
                <h1>CÓ THỂ BẠN QUAN TÂM</h1>
                @foreach (var item in Model.lstWouldYouLikeView)
                {

                    <div class=" panel panel-primary">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <img src="@item.Image" alt="@item.Name">
                                    <h1><a href="/tin-tuc/@item.MetaTitile-@item.ID">@item.Name</a></h1>
                                    <h6>@(item.CreateDate.Value.ToString("dd-MM-yyyy"))</h6>
                                </div>
                            </div>
                        </div>

                    </div>
                }
            </div>
            <div class="community-poll">
            </div>
        </div>
    </div>
    <div class="fb-like" data-href="@Request.Url.AbsoluteUri" data-width="20" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <div class="fb-comments" data-href="@Request.Url.AbsoluteUri" data-numposts="5"></div>
        </div>
    </div>
</div>
